<!--                        android:text="Export Private Key" />-->

                    <Button
                        android:id="@+id/importPrivateKeyBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:alpha="0.5"
                        android:background="@drawable/button_1_11"
                        android:elevation="10dp"
                        android:text="@string/import_new_wallet_with_private_key"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/importBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:alpha="0.5"
                        android:background="@drawable/button_1_11"
                        android:elevation="10dp"
                        android:text="@string/import_new_wallet_via_keystore"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />

<!--                    <Button-->
<!--                        android:id="@+id/importByPrivatekey"-->
